@model List<Article>

@{
    ViewData["Title"] = "Basket";
}


<h1>Basket</h1>

<link rel="stylesheet" href="~/css/shop.css" />
<div class="container">
    <div class="row">
        @{
            foreach (Article a in Model) {
                <a href="" class=" article" id="articlelink">
                    <div class="col-sm" style="width:200px; height:200px ">
                        <img src="@a.ImageLink" width="100" height="100" />
                        <br />
                        @a.Bezeichnung
                    <div class="aprice">@a.Preis €</div>
                    </div>

                </a>

            }
        }
    </div>
</div>