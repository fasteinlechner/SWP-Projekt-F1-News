@using Microsoft.AspNetCore.Http;
@using F1_News.Models.Helpers;


@{if (Context.Session.GetString("uname")!=null) {
        <h1>Deine Daten</h1> <br />
       // @SessionHelper.GetObjectFromJson<F1-News.Models.User>(Context.Session, "user").Username;
        <table>
            <tr>
                <td></td>
            </tr>
        </table>

        <p>Die Daten von @Context.Session.GetString("uname")</p>
        <a href="/user/logout">
            <div class="register first">
                <b>LOGOUT</b>
            </div>
        </a>


    } else {
        <h1>Hier können Sie sich registrieren und einloggen!</h1>

        <div class="container" style="padding-top: 60px">
            <div class="box">
                <a href="/user/registration">
                    <div class="register first">
                        <b> Benutzer erstellen </b>
                    </div>
                </a>
                <a href="/user/Login">
                    <div class="register second">
                        <b>Anmelden</b>
                    </div>
                </a>
            </div>
        </div>
    }


}



<style>

    .anchor-container {
        position: relative;
        width: 100%;
        height: 100%;
        background: red;
    }

    .anchor-item {
        position: absolute;
        width: 100%;
        height: 100%;
        background: transparent;
        text-decoration: none;
        color: white;
        text-align: center;
    }

    .box {
        display: grid;
        height: 100%;
        grid-template-rows: repeat(4,1fr);
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 20px;
    }

    .first {
        grid-row: span 1;
        grid-column: span 2;
    }

    .second {
        grid-row: span 1;
        grid-column: span 2;
    }


    .register {
        display: flex;
        cursor: pointer;
        background: red;
        box-shadow: 4px 0px 10px #000000;
        position: relative;
        z-index: 1;
        align-content: center;
        font-size: 25px;
        color: white;
        text-decoration: none;
        padding: 10px;
        border-radius: 40px;
    }

        .register::after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: -1;
            transform: scaleX(0);
            transform-origin: right;
            transition: transform 150ms ease-in;
            border-radius: 40px;
        }

        .register:hover::after {
            transform: scaleX(1);
            transform-origin: center;
        }
</style>
