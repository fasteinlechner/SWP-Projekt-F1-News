@model F1_News.Models.User

@{
    ViewData["Title"] = "Registration";
}

<link rel="stylesheet" href="~/css/user.css" />
<div class="container">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h1>Registrierung</h1>
        <hr />
        <form asp-controller="user" asp-action="registration" method="post">
            
            <div class="row">
                
                <div class="col">
                    <h2>Anmeldedaten</h2>
                    <hr />
                   
                    <div class="form-group">
                        <label asp-for="Username"><h4>Benutzername*</h4></label><br />
                        <input type="text" asp-for="Username" placeholder="Benutzername"/>
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><h4>Passwort*</h4></label><br />
                        <input type="password" asp-for="Password" placeholder="Passwort" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"><h4>E-Mail*</h4></label><br />
                        <input type="email" asp-for="Email" placeholder="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                
                <div class="col">
                    <h2>Persönliche Daten</h2>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Firstname"><h4>Vorname</h4></label><br />
                                <input type="text" asp-for="Firstname" placeholder="Vorname" />
                                <span asp-validation-for="Firstname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Lastname"><h4>Nachname</h4></label><br />
                                <input type="text" asp-for="Lastname" placeholder="Nachname" />
                                <span asp-validation-for="Lastname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Birthdate"><h4>Geburtsdatum*</h4></label><br />
                                <input type="date" asp-for="Birthdate" placeholder="Geburtsdatum" />
                                <span asp-validation-for="Birthdate"></span>
                            </div>
                         </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Gender"><h4>Geschlecht</h4></label><br />
                                <select asp-for="Gender">
                                    <option value="0">männlich</option>
                                    <option value="1">weiblich</option>
                                    <option value="2" selected>nicht angegeben</option>
                                </select>
                                <span asp-validation-for="Gender"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="absenden" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-1"></div>
</div>






